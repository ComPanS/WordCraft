{
    "name": "wordcraft",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "b": "pnpm --filter @wordcraft/backend",
        "w": "pnpm --filter @wordcraft/webapp",
        "sh": "pnpm --filter @wordcraft/shared",
        "dev": "pnpm -r --parallel dev",
        "test": "pnpm -r test",
        "types": "concurrently \"pnpm b types\"\"pnpm sh types\"",
        "lint": "concurrently \"pnpm b lint\" \"pnpm sh lint\"",
        "prettify": "pnpm -r --parallel prettify",
        "dcc": "dotenv -e ./.env.docker -e ./backend/.env -e ./webapp/.env -- bash -c 'docker compose config'",
        "dcb": "dotenv -e ./.env.docker -e ./backend/.env -e ./webapp/.env -- bash -c 'docker compose build'",
        "dcu": "dotenv -e ./.env.docker -e ./backend/.env -e ./webapp/.env -- bash -c 'docker compose up'",
        "dth": "docker tag wordcraft-image registry.heroku.com/wordcraftinfo/web",
        "hl": "heroku login && heroku container:login",
        "dph": "docker push registry.heroku.com/wordcraftinfo/web",
        "hr": "heroku container:release web -a wordcraftinfo",
        "prepare": "husky"
    },
    "dependencies": {
        "axios": "^1.7.9",
        "cron": "^3.5.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.7",
        "dotenv-cli": "^8.0.0",
        "w": "^1.1.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@types/axios": "^0.14.4",
        "@types/cron": "^2.4.3",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.6",
        "concurrently": "^9.1.2",
        "copyfiles": "^2.4.1",
        "eslint": "^9.18.0",
        "eslint-config-love": "^116.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-define-config": "^2.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest": "^28.10.0",
        "eslint-plugin-react": "^7.37.4",
        "eslint-plugin-react-refresh": "^0.4.18",
        "flag": "^5.0.1",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.3.0",
        "prettier": "^3.4.2",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "ts-patch": "^3.3.0",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0",
        "typescript-transform-paths": "^3.5.3"
    }
}
