{
    "ts-node": {
        "files": true,
        "transpileOnly": true
    },
    "ts-node-dev": {
        "ignore": ["node_modules", "src/**/*.d.ts"]
    },
    "compilerOptions": {
        "plugins": [{ "transform": "typescript-transform-paths" }],
        "paths": {
            "@wordcraft/webapp": ["../webapp/*"],
            "@wordcraft/shared": ["../shared/*"]
        },
        "outDir": "./dist",
        "allowJs": true,
        "typeRoots": ["node_modules/@types", "src/@types", "../node_modules/@types"],
        "types": ["node", "express"],
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "sourceRoot": "/",
        "resolveJsonModule": true,
        "inlineSources": true,
        "isolatedModules": true,
        "lib": ["ES2021"],
        "module": "commonjs",
        "moduleResolution": "Node",
        "target": "ES2021"
    },
    "exclude": ["node_modules", "dist", "src/**/*.d.ts"]
}
