{
    "name": "@wordcraft/backend",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "cross-env NODE_ENV=development ts-node-dev --watch ./src/emails/dist,./.env --rs --exit-child --ignore-watch './src/@types/*.d.ts' ./src/index.ts",
        "test": "jest --runInBand",
        "build-emails": "rimraf ./src/emails/dist && mkdir ./src/emails/dist && mjml ./src/emails/[!_]*.mjml -o ./src/emails/dist",
        "watch-emails": "mjml -w ./src/emails/[!_]*.mjml -o ./src/emails/dist",
        "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/backend",
        "build-ts": "rimraf ./dist && tsc --build ./tsconfig.build.json",
        "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
        "sentry-release": "dotenv -- bash -c 'sentry-cli releases new ${SOURCE_VERSION} --finalize --org wordcraft-f76e1b5dd --project backend --auth-token ${SENTRY_AUTH_TOKEN}'",
        "sentry-sourcemaps": "dotenv -- bash -c 'sentry-cli releases files ${SOURCE_VERSION} upload-sourcemaps ./dist --org wordcraft-f76e1b5dd --project backend'",
        "sentry": "pnpm sentry-release && pnpm sentry-sourcemaps",
        "start": "cross-env NODE_ENV=production node ./dist/backend/src/index.js",
        "pmd": "prisma migrate dev",
        "pmt": "dotenv -e ./.env.test prisma migrate deploy",
        "pmp": "dotenv -e ./.env.production prisma migrate deploy",
        "pgc": "prisma generate",
        "types": "tsc --noEmit --project ./tsconfig.json",
        "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --fix'",
        "prettify": "prettier --log-level warn --cache --write \"{src/**/*,*}.{ts,tsx,js,json,yml,scss}\" \"!**/{node_modules,dist}/**/*\"",
        "prepare": "pnpm pgc && ts-patch install -s",
        "check-cyclic": "madge --circular --extensions ts,tsx src"
    },
    "prisma": {
        "schema": "./src/prisma/schema.prisma"
    },
    "dependencies": {
        "@sentry/integrations": "^7.114.0",
        "@sentry/node": "^8.48.0",
        "@wordcraft/shared": "workspace:*",
        "@wordcraft/webapp": "workspace:*",
        "axios": "^1.7.9",
        "cloudinary": "^2.5.1",
        "cors": "^2.8.5",
        "cron": "^3.5.0",
        "date-fns": "^4.1.0",
        "debug": "^4.4.0",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-validator": "^7.2.1",
        "fast-glob": "^3.3.3",
        "handlebars": "^4.7.8",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "mjml": "^4.15.3",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "picocolors": "^1.1.1",
        "randomstring": "^1.3.1",
        "react-router-dom": "^7.1.1",
        "serialize-error": "12.0.0",
        "superjson": "^2.2.2",
        "triple-beam": "^1.4.1",
        "winston": "^3.17.0",
        "yaml": "^2.7.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@prisma/client": "^6.2.1",
        "@sentry/cli": "^2.40.0",
        "@types/cors": "^2.8.17",
        "@types/cron": "^2.4.3",
        "@types/debug": "^4.1.12",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/lodash": "^4.17.14",
        "@types/node": "^22.10.5",
        "@types/passport": "^1.0.17",
        "@types/passport-jwt": "^4.0.1",
        "@types/randomstring": "^1.3.0",
        "@types/triple-beam": "^1.3.5",
        "eslint-plugin-node": "^11.1.0",
        "prisma": "^6.2.1"
    }
}
